<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upload Grades - Enrollment System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar', { user }) %>
  <div class="container mt-4">
    <h2>Upload Grades</h2>
    
    <div class="card mt-4">
      <div class="card-body">
        <form method="POST" action="/upload-grades">
          <div class="mb-3">
            <label class="form-label">Student ID</label>
            <input type="number" class="form-control" name="studentId" required>
            <small class="text-muted">Enter the student's user ID</small>
          </div>
          
          <div class="mb-3">
            <label class="form-label">Course</label>
            <select class="form-control" name="courseId" required>
              <option value="">Select a course</option>
              <% courses.forEach(course => { %>
                <option value="<%= course.id %>"><%= course.code %> - <%= course.name %></option>
              <% }) %>
            </select>
          </div>
          
          <div class="mb-3">
            <label class="form-label">Grade</label>
            <input type="text" class="form-control" name="grade" required placeholder="e.g., A, B+, 95">
          </div>
          
          <button type="submit" class="btn btn-primary">Submit Grade</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>