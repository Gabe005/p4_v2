<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Courses - Enrollment System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar', { user }) %>
  <div class="container mt-4">
    <h2>Available Courses</h2>
    
  <% if (user.role === 'student') { %>
  <h4 class="mt-4">My Enrolled Courses</h4>
  <div class="row">
    <% if (enrolled && enrolled.length > 0) { %>
      <% enrolled.forEach(course => { %>
      <div class="col-md-6 mb-3">
        <div class="card border-success">
          <div class="card-body">
            <h5 class="card-title"><%= course.code %> - <%= course.name %></h5>
            <p class="card-text"><%= course.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <span class="badge bg-success">Enrolled</span>
              <form method="POST" action="/drop-course" class="d-inline" onsubmit="return confirm('Are you sure you want to drop this course?');">
                <input type="hidden" name="courseId" value="<%= course.id %>">
                <button type="submit" class="btn btn-danger btn-sm">Drop Course</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    <% } else { %>
      <p class="text-muted">No enrolled courses yet</p>
    <% } %>
  </div>

  <h4 class="mt-4">All Courses</h4>
  <% } %>
    
    <div class="row">
      <% courses.forEach(course => { %>
      <div class="col-md-6 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= course.code %> - <%= course.name %></h5>
            <p class="card-text"><%= course.description %></p>
            <p class="text-muted">Slots: <%= course.availableSlots %></p>
            
            <% if (user.role === 'student' && course.availableSlots > 0) { %>
              <% const isEnrolled = enrolled && enrolled.some(e => e.id === course.id); %>
              <% if (!isEnrolled) { %>
                <form method="POST" action="/enroll" class="d-inline">
                  <input type="hidden" name="courseId" value="<%= course.id %>">
                  <button type="submit" class="btn btn-primary btn-sm">Enroll</button>
                </form>
              <% } else { %>
                <span class="badge bg-success">Enrolled</span>
              <% } %>
            <% } %>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</body>
</html>